# Text Editors & Files
alias v="nvim"
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias oc="opencode"
alias ls='eza --color=always --icons=auto'
alias ll='eza -la --color=always --icons=auto'
alias lt='eza --tree --level=2 --color=always --icons=auto'
alias cat='bat --plain'
alias mkcd='function _mkcd() { mkdir -p "$1" && cd "$1" }; _mkcd'
